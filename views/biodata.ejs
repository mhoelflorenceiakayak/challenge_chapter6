<!DOCTYPE html>
<html lang="en">
<head>
    <!-- My CSS -->
    <link href="/css/dashboard.css" rel="stylesheet" type="text/css"/>
    <title>Dashboard</title>
</head>
<body>
    
    
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
          <h1> <span class="fab fa-asymmetrik"> </span> <span>Games.flo.id</span>
          </h1>
        </div>
        
        <div class="sidebar-menu">
          <ul>
            <li>
              <a href="/dashboard" class="active">
                <span class="fas fa-tachometer-alt"></span>
                <span>Users Data</span>
              </a>
            </li>
            <li>
              <a href="/user/biodata"">
                <span class="fas fa-users" ></span>
                <span>Users Biodata</span>
              </a>
            </li>
            <li>
              <a href="/schedule">
                <span class="fas fa-stream"></span>
              <span>All Schedule</span>
              </a>
            </li>
          </ul>

        </div>
    </div>    

    <div class="main-content">
      <header>
        <h2>
          <label for="nav-toggle">
            <span class="fas fa-bars"></span>
          </label>
          Dashboard
        </h2>
      </header>

      <main>
        <div class="recent-grid">
          <div class="projects">
            <div class="card">
              <div class="card-header">
                <h2>Current Users</h2>
                <a href="/user/add"> <button> Add New Users <span class="fas fa-arrow-right"></span> </button> </a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table width="90%">
                  <thead>
                    <tr>
                      <td>Fullname</td>
                      <td>Country</td> 
                      <td>Email</td>
                      <td>username</td>
                      <td>Action</td>
                    </tr>
                  </thead>
                    <tbody>
                         <% biodata.forEach(i=> { %>
                              <td>
                                <%= i.fullname %>
                              </td>
                              <td>
                                <%= i.country %>
                              </td>
                              <td>
                                <%= i.email %>
                              </td>
                              <td>
                                <%= i.username %>
                              </td>
                              
                              <td>
                                <a href="/user/delete/<%= i.id %>"><button>Delete<span
                                      class="fas fa-arrow-right"></span>
                                  </button></a>
                                <a href="/user/update/<%= i.id %>"><button>Update<span
                                      class="fas fa-arrow-right"></span>
                                  </button></a>
                              </td>
                            </tr>
                            <%})%>
                  </tbody>

                </table>
                </div>
              </div>

            </div>

          </div>
          
          
        </div>  

      </main>
    </div>


</body>
</html>